<div class="devise-card">
  <div class="devise-logo">ðŸ”‘</div>
  <h2 class="devise-title">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@example.com" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me password reset instructions", class: "devise-btn devise-btn-primary" %>
    </div>
  <% end %>

  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
