<div class="devise-card">
  <div class="devise-logo">ðŸ¦”</div>
  <h2 class="devise-title">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "devise-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@example.com" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="devise-divider">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="field">
      <%= f.label :password %>
      <em>(leave blank if you don't want to change it<% if @minimum_password_length %> â€” <%= @minimum_password_length %> characters minimum<% end %>)</em>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" %>
    </div>

    <div class="field">
      <%= f.label :current_password %>
      <em>(we need your current password to confirm your changes)</em>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" %>
    </div>

    <div class="actions devise-edit-actions">
      <%= f.submit "Update", class: "devise-btn devise-btn-primary" %>
    </div>
  <% end %>

  <div class="devise-cancel-section">
    <h3>Cancel my account</h3>
    <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "devise-btn devise-btn-secondary" %></p>
    <%= link_to "Back", :back, class: "devise-back-link" %>
  </div>
</div>
