<div class="devise-card">
  <div class="devise-logo">ðŸŒ±</div>
  <h2 class="devise-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@example.com" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "devise-btn devise-btn-primary" %>
    </div>
  <% end %>

  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
